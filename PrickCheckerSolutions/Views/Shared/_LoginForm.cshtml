@model PrickCheckerSolutions.ViewModel.vm_Login

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "red-text" })

    <div class="row">
        <div class="col s12 m12 l12">
            <h4 class="light">
                Login
            </h4>
        </div>

        <div class="input-field col s12 m12 l12">
            @Html.TextBoxFor(model => model.username, new { @class = "validate", @placeholder = "username", @id = "txt_login_usernamme", @type = "text" })
        </div>

        <div class="input-field col s12 m12 l12">
            @Html.PasswordFor(model => model.password, new { @class = "validate", @placeholder = "password", @id = "txt_login_password", @type = "password" })
        </div>
        <div class="input-field col s12 m12 l12">
            <div class="row">
                <div class="col s6 m6 l6">
                    <button type="button" class="waves-effect waves-light btn blue">
                        Login
                    </button>
                </div>
                <div class="col s6 m6 l6">
                    <button type="button" class="btn tiny white blue-text z-depth-0">
                       <small class="inline">
                           password?
                       </small>
                    </button>
                </div>
            </div>
            
        </div>


    </div>
}

