@model PrickCheckerSolutions.ViewModel.vm_SearchResults


@if (Model == null)
{
    <h3 class="grey-text">No results to display</h3>
}
else
{
    <h2>Total Result Count: @Model.totalcount</h2>
    <h2>Current Page: @Model.currentpage</h2>
    <h3>Pages to display: @string.Format("{0}", Convert.ToInt32(((Model.totalcount / 20) + 1)).ToString())</h3>
    if (Model.results == null || (int)Model.results.Count <= 0)
    {
        <h3 class="grey-text">No results to display</h3>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.results)
            {
                @Html.Partial("_SearchProductItemView", item)
            }
        </div>
        
    }
}
