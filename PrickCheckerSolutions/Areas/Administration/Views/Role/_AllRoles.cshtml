@model IEnumerable<PrickCheckerSolutions.Areas.Administration.Models.Roles>

<table class="table table-condensed table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <a href='@Url.Action("Edit", "Role", new { name = item.name.ToLower() })' class="btn btn-info" data-outputdiv="oprDiv" data-crud="y">Edit</a>
            <a href='@Url.Action("Delete", "Role", new { name = item.name.ToLower() })' class="btn btn-danger" data-outputdiv="oprDiv" data-crud="y">Delete</a>
        </td>
    </tr>
}

</table>
