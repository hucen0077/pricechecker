@model PrickCheckerSolutions.Areas.Administration.Models.Roles


<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            Delete Role <b>@Model.name</b>
        </h4>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <h4 class="text-danger">Are you sure you want to delete this?</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @id = "txt_rolename", @readonly = "readonly" } })
                    @Html.HiddenFor(model => model.id, new { @id = "txt_id"})
                </div>
                <div class="col-md-2">
                    <input type="button" value="Delete" class="btn btn-success" id="btnDelete" />
                    <input type="button" value="Cancel" class="btn btn-danger" id="btnCancel" data-outputdiv="oprDiv" data-cancelopr="y" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" id="lblmsg">

                </div>
            </div>
        </div>
    </div>
</div>


